@model proyecto_final.Models.Carreras
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-control">
        <h4>Carrera</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdentificadorCarrera)

        <div class="form-group">
            @Html.LabelFor(model => model.Id_Grado)
            @Html.DropDownListFor(
                model => model.Id_Grado,
                (SelectList)ViewBag.Grados,
                "-- Seleccione Grado --",
                new { @class = "form-control" }
            )
            @Html.ValidationMessageFor(model => model.Id_Grado)
        </div>

        <div>
            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
            @Html.EditorFor(model => model.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>

        <div>
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Descripcion, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
        </div>

        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>

}
