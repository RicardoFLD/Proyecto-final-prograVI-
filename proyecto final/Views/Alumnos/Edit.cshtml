            @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.Genero, new { @class = "form-label" })
            @Html.DropDownListFor(
                model => model.Genero,
                new SelectList(new[] { "M", "F" }), // Valores como strings
                "-- Seleccione el género --",
                new { @class = "form-control" }
            )
            @Html.ValidationMessageFor(model => model.Genero)
        </div>
        <div>
            @Html.LabelFor(model => model.FechaNacimiento, new { @class = "form-label" })
            @Html.EditorFor(model => model.FechaNacimiento, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.Nombre, new { @class = "form-label" })
            @Html.EditorFor(model => model.Nombre, new { @class = "form-control" })
