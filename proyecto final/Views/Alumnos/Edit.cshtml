        </div>
        <div>
            @Html.LabelFor(model => model.TelefonoPrincipal, new { @class = "form-label" })
            @Html.EditorFor(model => model.TelefonoPrincipal, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TelefonoPrincipal, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.TelefonoSecundario, new { @class = "form-label" })
            @Html.EditorFor(model => model.TelefonoSecundario, new { @class = "form-control" })
