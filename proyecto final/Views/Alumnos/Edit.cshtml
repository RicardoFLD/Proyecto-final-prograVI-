        </div>
        <div>
            @Html.LabelFor(model => model.PrimerApellido, new { @class = "form-label" })
            @Html.EditorFor(model => model.PrimerApellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.PrimerApellido, "", new { @class = "text-danger" })
        </div>
        <div>
            @Html.LabelFor(model => model.SegundoApellido, new { @class = "form-label" })
            @Html.EditorFor(model => model.SegundoApellido, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SegundoApellido, "", new { @class = "text-danger" })
        </div>
        <div>
