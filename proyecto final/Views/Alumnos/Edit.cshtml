@model proyecto_final.Models.Alumno
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-control">
        <h4>Alumno</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdentificadorAlumno)

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha_Ingreso, new { @class = "form-label" })
